#!/usr/bin/env ruby
$: << File.dirname(File.expand_path(__FILE__)) + '/../lib'
require 'jolt'

unless File.exist?(File.expand_path('~/.vim/jolts'))
  puts 'mkdir ~/.vim/jolts'
  system 'mkdir ~/.vim/jolts'
end

case ARGV.shift
when 'help'
  VimJolts::Command.help ARGV.shift
when '-v', '--version'
  VimJolts::Command.version
when 'install'
  VimJolts::Command.install ARGV.shift
when '-h', '--help', nil
  VimJolts::Command.help_default
else
  puts 'invalid arguments'
end
